<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shaha.sudokumaster.MainActivity"
    android:orientation="vertical"
    android:weightSum="100">
    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Sudoku Master"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:layout_weight="30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_weight="70"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:id="@+id/startGameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start a new game"
            android:textSize="@dimen/menu_text_size"
            android:layout_marginTop="@dimen/menu_margin"
            android:textColor="@color/menuTextColor"
            android:background="@color/menuBackgroud"
            android:padding="8dp"/>
        <TextView
            android:gravity="center"
            android:padding="8dp"
            android:id="@+id/solveSudokuTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solve a sudoku"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@color/menuTextColor"
            android:background="@color/menuBackgroud"
            android:layout_marginTop="@dimen/menu_margin"/>
        <TextView
            android:gravity="center"
            android:textColor="@color/menuTextColor"
            android:background="@color/menuBackgroud"
            android:padding="8dp"
            android:id="@+id/aboutTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_margin"
            android:textSize="@dimen/menu_text_size"
            android:text="About"/>
        <TextView
            android:gravity="center"
            android:textColor="@color/menuTextColor"
            android:background="@color/menuBackgroud"
            android:padding="8dp"
            android:id="@+id/exitTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_margin"
            android:textSize="@dimen/menu_text_size"
            android:text="Exit"/>
    </LinearLayout>
</LinearLayout>
